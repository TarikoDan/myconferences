<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specifying a JDBC datasource -->
    <Resource
        name="jdbc/conference"
        auth="Container"
        type="javax.sql.DataSource"
        driverClassName="com.mysql.cj.jdbc.Driver"
        username="root"
        password="root"
        url="jdbc:mysql://localhost:3306/conference?serverTimezone=UTC"
        defaultAutoCommit="false"
        defaultTransactionIsolation="READ_COMMITTED"
        maxTotal="50"
        maxIdle="20"
        maxWaitMillis="10000"
    />

</Context>
